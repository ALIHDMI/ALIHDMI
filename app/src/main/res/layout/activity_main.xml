<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="70dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4">

        <TextView
            android:id="@+id/textView0"
            android:gravity="end"
            android:paddingEnd="20dp"
            android:textColor="@color/black"
            android:maxLines="1"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="38sp"
            android:autoSizeMaxTextSize="60sp"
            android:autoSizeStepGranularity="2sp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="4">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingEnd="20dp"
            android:gravity="end"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="20dp"
            android:textSize="45sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"

        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:paddingStart="20dp"
            android:gravity="center"
            android:paddingEnd="20dp"

            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/buttonC"
                android:theme="@style/buttonColor"
                android:background="@drawable/buttonbackground"
                android:src="@drawable/iconc"
                android:layout_width="75dp"
                android:layout_marginEnd="10dp"
                android:layout_height="65dp"/>
            <Button
                android:id="@+id/buttonOpenBracket"
                android:theme="@style/buttonColor"
                android:text="("
                android:textSize="35sp"
                android:background="@drawable/buttonbackground"
                android:layout_width="75dp"
                android:layout_marginEnd="10dp"
                android:layout_height="65dp"/>
            <Button
                android:id="@+id/buttonCloseBracket"
                android:theme="@style/buttonColor"
                android:text=")"
                android:textSize="35sp"
                android:background="@drawable/buttonbackground"
                android:layout_width="75dp"
                android:layout_marginEnd="10dp"
                android:layout_height="65dp"/>
            <ImageButton
                android:id="@+id/buttonDivide"
                android:src="@drawable/icondivide"
                android:theme="@style/buttonColor"
                android:background="@drawable/buttonbackground"
                android:layout_width="75dp"
                android:layout_height="65dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:gravity="center"

            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/button7"
                android:theme="@style/buttonColor"
                android:src="@drawable/icon7"
                android:background="@drawable/buttonbackground"
                android:layout_width="75dp"
                android:layout_marginEnd="10dp"
                android:layout_height="65dp"/>
            <ImageButton
                android:id="@+id/button8"
                android:theme="@style/buttonColor"
                android:src="@drawable/icon8"
                android:background="@drawable/buttonbackground"
                android:layout_width="75dp"
                android:layout_marginEnd="10dp"
                android:layout_height="65dp"/>
            <ImageButton
                android:id="@+id/button9"
                android:theme="@style/buttonColor"
                android:src="@drawable/icon9"
                android:background="@drawable/buttonbackground"
                android:layout_width="75dp"
                android:layout_marginEnd="10dp"
                android:layout_height="65dp"/>
            <ImageButton
                android:id="@+id/buttonMultiply"
                android:theme="@style/buttonColor"
                android:src="@drawable/iconmultiply"
                android:background="@drawable/buttonbackground"
                android:layout_width="75dp"
                android:layout_height="65dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:gravity="center"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"

            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/button4"
                android:theme="@style/buttonColor"
                android:src="@drawable/icon4"
                android:background="@drawable/buttonbackground"
                android:layout_width="75dp"
                android:layout_marginEnd="10dp"
                android:layout_height="65dp"/>
            <ImageButton
                android:id="@+id/button5"
                android:theme="@style/buttonColor"
                android:src="@drawable/icon5"
                android:background="@drawable/buttonbackground"
                android:layout_width="75dp"
                android:layout_marginEnd="10dp"
                android:layout_height="65dp"/>
            <ImageButton
                android:id="@+id/button6"
                android:theme="@style/buttonColor"
                android:src="@drawable/icon6"
                android:background="@drawable/buttonbackground"
                android:layout_width="75dp"
                android:layout_marginEnd="10dp"
                android:layout_height="65dp"/>
            <ImageButton
                android:id="@+id/buttonMinus"
                android:theme="@style/buttonColor"
                android:src="@drawable/iconminus"
                android:background="@drawable/buttonbackground"
                android:layout_width="75dp"
                android:layout_height="65dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:gravity="center"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"

            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/button1"
                android:theme="@style/buttonColor"
                android:src="@drawable/icon1"
                android:background="@drawable/buttonbackground"
                android:layout_width="75dp"
                android:layout_marginEnd="10dp"
                android:layout_height="65dp"/>
            <ImageButton
                android:id="@+id/button2"
                android:theme="@style/buttonColor"
                android:src="@drawable/icon2"
                android:background="@drawable/buttonbackground"
                android:layout_width="75dp"
                android:layout_marginEnd="10dp"
                android:layout_height="65dp"/>
            <ImageButton
                android:id="@+id/button3"
                android:theme="@style/buttonColor"
                android:src="@drawable/icon3"
                android:background="@drawable/buttonbackground"
                android:layout_width="75dp"
                android:layout_marginEnd="10dp"
                android:layout_height="65dp"/>
            <ImageButton
                android:id="@+id/buttonPlus"
                android:theme="@style/buttonColor"
                android:src="@drawable/iconplus"
                android:background="@drawable/buttonbackground"
                android:layout_width="75dp"
                android:layout_height="65dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:gravity="center"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"

            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/buttonRemove"
                android:theme="@style/buttonColor"
                android:src="@drawable/iconremove"
                android:background="@drawable/buttonbackground"
                android:layout_width="75dp"
                android:layout_marginEnd="10dp"
                android:onClick="setBooleanButton"
                android:layout_height="65dp"/>
            <ImageButton
                android:id="@+id/button0"
                android:theme="@style/buttonColor"
                android:src="@drawable/icon0"
                android:onClick="setBooleanButton"
                android:background="@drawable/buttonbackground"
                android:layout_width="75dp"
                android:layout_marginEnd="10dp"
                android:layout_height="65dp"/>
            <ImageButton

                android:id="@+id/buttonPeriod"
                android:theme="@style/buttonColor"
                android:src="@drawable/iconcomma"
                android:onClick="setBooleanButton"
                android:background="@drawable/buttonbackground"
                android:layout_width="75dp"
                android:layout_marginEnd="10dp"
                android:layout_height="65dp"/>
            <ImageButton
                android:id="@+id/buttonEquals"
                android:theme="@style/buttonColor"
                android:src="@drawable/iconequals"
                android:onClick="setBooleanButton"
                android:background="@drawable/buttonbackground"
                android:layout_width="75dp"
                android:layout_height="65dp"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>