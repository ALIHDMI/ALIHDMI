<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="0dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4">

        <TextView
            android:id="@+id/textView0"
            android:gravity="end"
            android:paddingEnd="20dp"
            android:textColor="@color/black"
            android:maxLines="1"
            android:textSize="20sp"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="38sp"
            android:autoSizeMaxTextSize="60sp"
            android:autoSizeStepGranularity="2sp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingEnd="20dp"
            android:textSize="20sp"
            android:gravity="end"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:layout_weight="1.2">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingStart="20dp"

                android:paddingEnd="5dp">

                <ImageButton
                    android:id="@+id/buttonC"
                    android:layout_width="75dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/buttonbackground"
                    android:src="@drawable/iconc"
                    android:theme="@style/buttonColor" />

                <Button
                    android:id="@+id/buttonOpenBracket"
                    android:theme="@style/buttonColor"
                    android:text="("
                    android:textSize="10sp"
                    android:background="@drawable/buttonbackground"
                    android:layout_width="75dp"
                    android:layout_marginEnd="10dp"
                    android:layout_height="35dp"/>
                <Button
                    android:id="@+id/buttonCloseBracket"
                    android:theme="@style/buttonColor"
                    android:text=")"
                    android:textSize="10sp"
                    android:background="@drawable/buttonbackground"
                    android:layout_width="75dp"
                    android:layout_marginEnd="10dp"
                    android:layout_height="35dp"/>

                <ImageButton
                    android:id="@+id/buttonDivide"
                    android:layout_width="75dp"
                    android:layout_height="35dp"
                    android:background="@drawable/buttonbackground"
                    android:src="@drawable/icondivide"
                    android:theme="@style/buttonColor" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:gravity="center"

                android:paddingEnd="5dp"
                android:paddingStart="20dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/button7"
                    android:theme="@style/buttonColor"
                    android:src="@drawable/icon7"
                    android:background="@drawable/buttonbackground"
                    android:layout_width="75dp"
                    android:layout_marginEnd="10dp"
                    android:layout_height="35dp"/>
                <ImageButton
                    android:id="@+id/button8"
                    android:theme="@style/buttonColor"
                    android:src="@drawable/icon8"
                    android:background="@drawable/buttonbackground"
                    android:layout_width="75dp"
                    android:layout_marginEnd="10dp"
                    android:layout_height="35dp"/>
                <ImageButton
                    android:id="@+id/button9"
                    android:theme="@style/buttonColor"
                    android:src="@drawable/icon9"
                    android:background="@drawable/buttonbackground"
                    android:layout_width="75dp"
                    android:layout_marginEnd="10dp"
                    android:layout_height="35dp"/>
                <ImageButton
                    android:id="@+id/buttonMultiply"
                    android:theme="@style/buttonColor"
                    android:src="@drawable/iconmultiply"
                    android:background="@drawable/buttonbackground"
                    android:layout_width="75dp"
                    android:layout_height="35dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:gravity="center"
                android:paddingEnd="5dp"
                android:paddingStart="20dp"

                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/button4"
                    android:theme="@style/buttonColor"
                    android:src="@drawable/icon4"
                    android:background="@drawable/buttonbackground"
                    android:layout_width="75dp"
                    android:layout_marginEnd="10dp"
                    android:layout_height="35dp"/>
                <ImageButton
                    android:id="@+id/button5"
                    android:theme="@style/buttonColor"
                    android:src="@drawable/icon5"
                    android:background="@drawable/buttonbackground"
                    android:layout_width="75dp"
                    android:layout_marginEnd="10dp"
                    android:layout_height="35dp"/>
                <ImageButton
                    android:id="@+id/button6"
                    android:theme="@style/buttonColor"
                    android:src="@drawable/icon6"
                    android:background="@drawable/buttonbackground"
                    android:layout_width="75dp"
                    android:layout_marginEnd="10dp"
                    android:layout_height="35dp"/>
                <ImageButton
                    android:id="@+id/buttonMinus"
                    android:theme="@style/buttonColor"
                    android:src="@drawable/iconminus"
                    android:background="@drawable/buttonbackground"
                    android:layout_width="75dp"
                    android:layout_height="35dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:gravity="center"
                android:paddingEnd="5dp"
                android:paddingStart="20dp"

                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/button1"
                    android:theme="@style/buttonColor"
                    android:src="@drawable/icon1"
                    android:background="@drawable/buttonbackground"
                    android:layout_width="75dp"
                    android:layout_marginEnd="10dp"
                    android:layout_height="35dp"/>
                <ImageButton
                    android:id="@+id/button2"
                    android:theme="@style/buttonColor"
                    android:src="@drawable/icon2"
                    android:background="@drawable/buttonbackground"
                    android:layout_width="75dp"
                    android:layout_marginEnd="10dp"
                    android:layout_height="35dp"/>
                <ImageButton
                    android:id="@+id/button3"
                    android:theme="@style/buttonColor"
                    android:src="@drawable/icon3"
                    android:background="@drawable/buttonbackground"
                    android:layout_width="75dp"
                    android:layout_marginEnd="10dp"
                    android:layout_height="35dp"/>
                <ImageButton
                    android:id="@+id/buttonPlus"
                    android:theme="@style/buttonColor"
                    android:src="@drawable/iconplus"
                    android:background="@drawable/buttonbackground"
                    android:layout_width="75dp"
                    android:layout_height="35dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:paddingEnd="5dp"
                android:paddingStart="20dp"

                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/buttonRemove"
                    android:theme="@style/buttonColor"
                    android:src="@drawable/iconremove"
                    android:background="@drawable/buttonbackground"
                    android:layout_width="75dp"
                    android:layout_marginEnd="10dp"
                    android:layout_height="35dp"/>
                <ImageButton
                    android:id="@+id/button0"
                    android:theme="@style/buttonColor"
                    android:src="@drawable/icon0"
                    android:background="@drawable/buttonbackground"
                    android:layout_width="75dp"
                    android:layout_marginEnd="10dp"
                    android:layout_height="35dp"/>
                <ImageButton

                    android:id="@+id/buttonPeriod"
                    android:theme="@style/buttonColor"
                    android:src="@drawable/iconcomma"
                    android:onClick="setBooleanButton"
                    android:background="@drawable/buttonbackground"
                    android:layout_width="75dp"
                    android:layout_marginEnd="10dp"
                    android:layout_height="35dp"/>
                <ImageButton
                    android:id="@+id/buttonEquals"
                    android:theme="@style/buttonColor"
                    android:src="@drawable/iconequals"
                    android:background="@drawable/buttonbackground"
                    android:layout_width="75dp"
                    android:layout_height="35dp"/>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="end | bottom"
            android:layout_gravity="right"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingStart="8dp"

                android:paddingEnd="20dp">

                <Button
                    android:id="@+id/buttonSin"
                    android:layout_width="75dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/buttonbackground"
                    android:fontFamily="@font/bebas_neue"
                    android:text="sin"
                    android:textSize="15sp"
                    android:theme="@style/buttonColor" />

                <Button
                    android:id="@+id/buttonCos"
                    android:layout_width="75dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/buttonbackground"
                    android:fontFamily="@font/bebas_neue"
                    android:text="cos"
                    android:textSize="15sp"
                    android:theme="@style/buttonColor" />

                <Button
                    android:id="@+id/buttonTan"
                    android:layout_width="75dp"
                    android:layout_height="35dp"
                    android:background="@drawable/buttonbackground"
                    android:fontFamily="@font/bebas_neue"
                    android:text="tan"
                    android:textSize="15sp"
                    android:theme="@style/buttonColor" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:gravity="center"

                android:paddingEnd="20dp"
                android:paddingStart="8dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonLn"
                    android:theme="@style/buttonColor"
                    android:text="Ln"
                    android:textSize="15sp"
                    android:fontFamily="@font/bebas_neue"
                    android:background="@drawable/buttonbackground"
                    android:layout_width="75dp"
                    android:layout_marginEnd="10dp"
                    android:layout_height="35dp"/>
                <Button
                    android:id="@+id/buttonLog"
                    android:theme="@style/buttonColor"
                    android:text="Log"
                    android:textSize="15sp"
                    android:fontFamily="@font/bebas_neue"
                    android:background="@drawable/buttonbackground"
                    android:layout_width="75dp"
                    android:layout_marginEnd="10dp"
                    android:layout_height="35dp"/>
                <Button
                    android:id="@+id/buttonKoren"
                    android:theme="@style/buttonColor"
                    android:text="√"
                    android:textSize="15sp"
                    android:background="@drawable/buttonbackground"
                    android:layout_width="75dp"
                    android:layout_marginEnd="10dp"
                    android:layout_height="35dp"/>
                <Button
                    android:id="@+id/buttonAbs"
                    android:theme="@style/buttonColor"
                    android:text="abs"
                    android:fontFamily="@font/bebas_neue"
                    android:textSize="15sp"
                    android:background="@drawable/buttonbackground"
                    android:layout_width="75dp"
                    android:layout_height="35dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:gravity="center"
                android:paddingEnd="20dp"
                android:paddingStart="8dp"

                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonPi"
                    android:theme="@style/buttonColor"
                    android:text="𝝿"
                    android:textSize="15sp"
                    android:fontFamily="@font/bebas_neue"
                    android:background="@drawable/buttonbackground"
                    android:layout_width="75dp"
                    android:layout_marginEnd="10dp"
                    android:layout_height="35dp"/>
                <Button
                    android:id="@+id/buttonE"
                    android:theme="@style/buttonColor"
                    android:text="e"
                    android:textSize="15sp"
                    android:fontFamily="@font/bebas_neue"
                    android:background="@drawable/buttonbackground"
                    android:layout_width="75dp"
                    android:layout_marginEnd="10dp"
                    android:layout_height="35dp"/>
                <Button
                    android:id="@+id/buttonX2"
                    android:theme="@style/buttonColor"
                    android:text="X^2"
                    android:textSize="15sp"
                    android:fontFamily="@font/bebas_neue"
                    android:background="@drawable/buttonbackground"
                    android:layout_width="75dp"
                    android:layout_marginEnd="10dp"
                    android:layout_height="35dp"/>
                <Button
                    android:id="@+id/buttonXY"
                    android:theme="@style/buttonColor"
                    android:text="x^y"
                    android:textSize="15sp"
                    android:fontFamily="@font/bebas_neue"
                    android:background="@drawable/buttonbackground"
                    android:layout_width="75dp"
                    android:layout_height="35dp"/>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>